<% if @attendance.errors.any? %>
  $('.errors').empty().append("<%= escape_javascript(render(:partial => 'errors')) %>");
<% else %>
  $('.errors').empty();
  $('.errors').empty().append("<%= escape_javascript(render(:partial => 'confirm')) %>");

  setTimeout(function(){ $('.errors').empty(); }, 7000)

  $('#attendance_email').val('');
  $('#attendance_body').val('');
<% end %>

